generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  MODERATOR
  ADMIN
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  role      Role       @default(USER)
  posts     Post[]
  comments  Comment[]
  reactions Reaction[] // âœ… Opposite relation added
  notifications Notification[]  // ðŸ‘ˆ added relation here
  createdAt DateTime   @default(now())
}

model Post {
  id        String     @id @default(uuid())
  title     String
  content   String
  bannerUrl String?
  tags      String[]
  authorId  String
  author    User       @relation(fields: [authorId], references: [id])
  comments  Comment[]
  createdAt DateTime   @default(now())
  reactions Reaction[] // âœ… Opposite relation added
  updatedAt DateTime   @updatedAt
}

model Comment {
  id        String     @id @default(uuid()) //Har comment ka unique ID (auto generate hota hai).
  content   String //Comment ka actual text ya message.
  authorId  String //Ye us user ka ID hai jisne comment likha hai.
  postId    String //Agar null hai to ye top-level comment hai
  parentId  String? // for nested comments
  author    User       @relation(fields: [authorId], references: [id]) //Kis user ne comment likha.
  post      Post       @relation(fields: [postId], references: [id]) //Kis post ke saath comment linked hai.
  reactions Reaction[] // âœ… Opposite relation added
  createdAt DateTime   @default(now()) //Comment kab create hua.
}

model Reaction {
  id        String       @id @default(uuid())
  type      ReactionType
  userId    String
  postId    String?
  commentId String?
  user      User         @relation(fields: [userId], references: [id])
  post      Post?        @relation(fields: [postId], references: [id])
  comment   Comment?     @relation(fields: [commentId], references: [id])
  createdAt DateTime     @default(now())
}

enum ReactionType {
  LIKE
  LOVE
}

model Notification {
  id          String           @id @default(uuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id])
  title       String?
  message     String
  type        NotificationType
  referenceId String?          // postId / commentId / other
  isRead      Boolean          @default(false)
  createdAt   DateTime         @default(now())
}

enum NotificationType {
  LIKE
  COMMENT
  REPLY
  SYSTEM
}

